html
	font-family "Verdana", scans-serif

.wrapper
	width 450px
	height: 500px
	background #f9f9fb

	
.wrapper__title
	width 100%
	height 50px
	margin 0 auto
	background-color #d80027

.title-text
	text-align center
	height 30px
	padding-top 10px
	font-size 16px
	color #fff

	
.orders
	list-style none

.order
	width 100%
	height 50px

	
.order__close
	width 20px
	height 20px
	margin 5px 0 0 0
	float left
	background url(../../images/cart/close.png) 0px no-repeat

	
	
.order__info
	position relative
	height 25px
	margin 5px
	float left
	
.order__less
	width 20px
	height 20px
	margin 5px
	
	float left
	background url(../../images/cart/lessmore.png) 0px 0px no-repeat

.order__value
	width 50px
	height 25px
	margin 5px
	float left
	
.order__more
	width 20px
	height 20px
	margin 5px
	float left
	background url(../../images/cart/lessmore.png) 0px -20px no-repeat

.order__cost
	position relative
	height 25px
	margin 5px
	float left
	
.wrapper__allcost
	width 55%
	height 35px
	margin 0 auto

.wrapper__button
	width 50%
	position relative
	height 50px
	margin 0 auto

.wrapper__button_button
	width 50%
	position absolute
	top 25%
	left 25%
	height 30px
	background-color #d80027
	color #fff
	border 0px
	font-size 18px
.wrapper__hr
	width 75%

.wrapper__image
	width 60px
	height 65px
	margin 0 auto
	background url(../../images/cart/food.svg) 0 no-repeat
	





