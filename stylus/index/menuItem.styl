.menu-item
	overflow hidden
	position relative
	width 316px
	height 216px
	border 8px solid #fff
	box-shadow 1px 1px 3px rgba(0, 0, 0, 0.3)
	position relative
	transition(ease-in-out)
	box-sizing()
	a
		color #333
		.menu-item__image
			width 100%
			height 100%
	.menu-item__info
		position absolute
		top 0
		bottom 0
		left 0
		right 0
		text-align center
 		-webkit-backface-visibility hidden
		backface-visibility hidden
		background #1a4a72
		background rgba(26, 74, 114, 0.6)
		background #333333
		background rgba(0, 0, 0, 0.6)
		visibility hidden
		opacity 0
		transition(ease-in-out)
		.menu-item__title
			background rgba(12, 34, 52, 0.6)
			text-transform uppercase
			color #fff
			text-align center
			font-size 17px
			padding 10px
			background #111111
			margin 30px 0 0 0
			transition(ease-in-out)
			translateY(-100)
		.menu-item__other-info
			font-style italic
			font-size 12px
			position relative
			color #bbb
			padding 20px 20px 20px
			text-align center
			transition(linear)
			translateY(100)
	.menu-item__image
		transition(ease-in-out)
		scale(1)

.menu-item a:hover
	text-decoration none
	.menu-item__image
		scale(1.2)
	.menu-item__info 
		visibility visible
		opacity 1
		.menu-item__info.menu-item__title, .menu-item__info.menu-item__other-info
			translateY(0)


