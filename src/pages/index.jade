extends layout
include ../blocks/header/header
include ../blocks/button/button
include ../blocks/basket/basket
include ../blocks/order/order
include ../blocks/session/session
include ../blocks/menuitem/menuitem
include ../blocks/footer/footer
include ../blocks/subscriber/subscriber
include ../blocks/message/message

block title
    title Главная страница
    if user
        +header(user)
        +button("+", ["button_new-order"],{'href': '/services?owner=True' })
    else
        +header()
    .main-wrapper
        .main-page
            if user
                each order in orders
                    +session(order.owner.name, order.time, order.service.logo, order.service._id, order, user)
                    input(id='s' + order.id type='checkbox').hide-form__input
                    //label(for='s' + order.id) Показать присоединившихся:
        +footer('© M&B Corporation')

        if user
            #chat.chat
                .chat__close(onclick="document.getElementById('chat').style.display='none'")
                .chat__content
                    .chat__title
                        span.title__user_name= user.name
                    .chat__history
                        +message(user)
                        +message(user)
                        +message(user)
                    .chat__input
                        input(type="text")
                        +button("Send!", ['button_size-m'], {"type": "submit"})

            #orderform.orderform
                .orderform__close(onclick="document.getElementById('orderform').style.display='none'")
                .orderform__content
                    .orderform__title Форма заказа
                    .orderform__contact
                        input(type="text" value=user.name)
                        input(type="text" value="Телефон")
                        input(type="text" value="Улица")
                        input(type="text" value="Номер дома")
                        input(type="text" value="Корпус")
                        input(type="text" value="Квартира")
                    .orderform__input
                        +button("Заказать", [], {"type": "submit"})





