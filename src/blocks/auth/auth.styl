@import '../../stylus/vars.styl'

.auth
    width 20%
    position absolute
    top 30px
    right 20px
    color #fff

.auth__post
    margin-right 15px

.auth__avatar
    display inline-block
    font-size 1em
    color #fff
    padding-right 10px
    border-radius 100%

.auth__social
    display inline-block
    width 34px
    height 34px
    background-size 34px
    background-repeat no-repeat

.auth__logout
    text-decoration none
    font-weight normal
    color #fff

.auth__social_vk
    background-image url(../images/head/authorisation/social_vk.png)
    padding-right 20px
    cursor pointer

.auth__social_fb
    background-image url(../images/head/authorisation/social_fb.png)
    cursor pointer

ul.dropdown li
    position relative

ul.dropdown
    list-style-type none
    padding 0


ul.dropdown-inside
    list-style-type none
    padding 0

ul.dropdown-inside
    position absolute
    left -9999px

ul.dropdown li.dropdown-top
    display inline
    float left
    margin 0 1px 0 0

ul.dropdown li.dropdown-top a
    padding 3px 10px 4px
    display block

ul.dropdown a.dropdown-top
    background #000000

ul.dropdown a.dropdown-top:hover
    padding 2px 10px 5px

ul.dropdown li.dropdown-top:hover .dropdown-inside
    display block
    left: 0

ul.dropdown .dropdown-inside
    background #fff

ul.dropdown .dropdown-inside a:hover
    background #efefef

