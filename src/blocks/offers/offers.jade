include ../company/company
include ../company-info/company-info

mixin offers(service, mod, index)
    .offers(class= mod)
        +company(service.logo)
        .offers__info
            .offers__title= service.title
            +company-info(service, index)
            .offers__down-text
                each phone in service.phone
                    .offers__text= phone
            .offers__button
                +button("Сделать заказ", "offers-plugin__button", {href: "/services/"+service._id})
