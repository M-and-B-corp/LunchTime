include ../company/company
include ../company-info/company-info

mixin offers(service, mod)
    .offers(class= mod)
        +company(service.logo)
        .offers__info
            .offers__title= service.title
            +company-info(service)
            .offers__down-text
                each phone in service.phone
                    .offers__text= phone
            .offers__button
                +button("Сделать заказ", "offers-plugin__button", {href: "/menuPage?isOwner=true&serviceId="+service._id})
