@import '../../stylus/vars.styl'

.offers
    position relative
    float right
    width 47%
    border-radius 2px
    background #f5f5f5
    margin 0 auto
    box-shadow 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)
    border-top 5px solid buttons
    margin-right 20px
    margin-bottom 20px

.offers__info
    margin 0 0 0 200px
    padding-top 30px

.offers__title
    font-size 1.25em
    white-space nowrap

.offers__down-text
    margin-top 90px
    height 75px
    width 80%
    color #000
    background-color #f8f9fb
    border-radius 3px
    box-shadow: inset (0 0 3px 0 rgba(229,229,229,1))
    overflow hidden

.offers__button
    width 100%
    margin 0 auto

.offers__text
    font-size 0.75em
    padding 9px 0 0 9px
    text-align left

/* 
Стили для offers блока на странице companypage
*/

.offers_company
    width 100%
    margin 0 auto

@media screen and (max-width: 1000px)
    .offers__down-text
        margin 0 auto

    .offers__title
        width 30%
        margin 0 auto
        text-align center

    .offers__info
        margin 0

    .offers__button
        width 51%

@media screen and (max-width: 800px)
    .offers
        width 100%
        margin-top 20px
        float none

    .offers__info
        padding-top 0

    .offers__button
        margin 0 25%
