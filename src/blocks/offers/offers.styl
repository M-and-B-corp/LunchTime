@import '../../stylus/vars.styl'

.offers
    position relative
    width 680px
    height 200px
    background #fffffe
    margin 0 auto
    border-bottom 1px solid #E7FFFF
    &:hover
        .offers__title
            color buttons
            cursor pointer

.offers + .offers
    margin-top 30px

.offers__info
    margin 0 0 0 200px
    padding-top 30px

.offers__title
    font-size 20px

.offers__down-text
    margin-top 90px
    height 35px
    width 100%
    color #000
    background-color #f8f9fb
    border-radius 3px
    box-shadow: inset (0 0 3px 0 rgba(229,229,229,1))
    overflow hidden

.text
    font-size 12px
    padding 9px 0 0 9px
    text-align left
