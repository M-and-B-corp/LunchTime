@import '../../stylus/vars.styl'

.offers
    position relative
    float right
    width 71%
    height 250px
    border-radius 10px
    background #fffffe
    margin 0 auto
    border 2px dashed border-offers
    &:hover
        .offers__title
            color buttons
            cursor pointer

.offers + .offers
    margin-top 30px

.offers__info
    margin 0 0 0 200px
    padding-top 30px

.offers__title
    font-size 1.25em

.offers__down-text
    margin-top 90px
    height 35px
    width 80%
    color #000
    background-color #f8f9fb
    border-radius 3px
    box-shadow: inset (0 0 3px 0 rgba(229,229,229,1))
    overflow hidden

.offers__text
    font-size 0.75em
    padding 9px 0 0 9px
    text-align left

/* 
Стили для offers блока на странице companypage
*/

.offers_company
    width 100%
    margin 0 auto


@media screen and (max-width: 1000px)
    .offers__down-text
        margin 0 auto
        // margin-top 175px
        height 50px

    .offers
        height 55%

    .offers__title
        width 30%
        height 40px
        margin 0 auto
        text-align center

    .offers__info
        margin 0 0 0 10px
        height 100%

    .offers_company
        height 60%

@media screen and (max-width: 800px)
    .offers
        float none
        height 65%

    .offers__info
        padding-top 0

    .offers__down-text
        // margin-top 290px
        height 70px

    .offers
        height 65%
