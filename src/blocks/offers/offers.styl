@import '../../stylus/vars.styl'

.offers
    position relative
    width 680px
    height 200px
    background #fffffe
    margin 0 auto
    border-bottom 1px solid #f8f9fb
    &:hover
        .offers_title
            color buttons
            cursor pointer
.offers + .offers
    margin-top 30px

.offers__info
    margin 0 0 0 200px
    padding-top 30px

.offers_title
    font-size 20px

.cook
    font-size 12px
    color offers-grey

.categories
    font-size 12px

.sub-info
    position absolute

.sub-info__first
    margin-top 5px

.tab_cost
    width 120px
    float left
    margin-top 10px

.cost_info
    font-size 12px
    margin-top 10px
    color offers-grey

.tab_dep
    float left
    margin 10px 0 0 40px

.dep_info
    font-size 12px
    margin-top 10px
    color offers-grey

.tab_time
    width 120px
    float left
    margin 10px 0 0 50px

.time_info
    font-size 12px
    margin-top 10px
    color offers-grey

.offers-down_text
    margin-top 90px
    height 35px
    width 100%
    color #000
    background-color #f8f9fb
    border-radius 3px
    box-shadow: inset (0 0 3px 0 rgba(229,229,229,1))
    overflow hidden

.text
    font-size 12px
    padding 9px 0 0 9px
    text-align left
