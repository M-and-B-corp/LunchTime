include ../order/order

mixin basket(orders, serviceId)
    .basket
        form.basket__form(action="/basket" method="post")
            input(type="hidden", name="serviceId" value=serviceId)
            .orders
                each item in orders
                    +order(item.title, item.price)
            hr.basket__hr
            .basket__allcost
                span.total_sum
                span
            .basket__button
                +button("Заказать", [], {"type": "submit"})
