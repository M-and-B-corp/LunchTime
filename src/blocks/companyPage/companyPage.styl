@import '../../stylus/vars.styl'

.main-wrapper__company
    width 90%
    min-height 100%
    margin 0 auto
    padding 30px
    overflow hidden

.main-wrapper__menu
    width 50%
    background #fff
    float left
    margin-top 15px
    border-radius 2px
    overflow hidden
    box-shadow 0 2px 5px 0 rgba(0,0,0,.16),0 2px 10px 0 rgba(0,0,0,.12)
    border-top 5px solid buttons

.main-wrapper__cart
    width 45%
    background #fff
    float left
    margin-top 15px
    margin-left 30px
    border-radius 2px
    overflow hidden
    box-shadow 0 2px 5px 0 rgba(0,0,0,.16),0 2px 10px 0 rgba(0,0,0,.12)
    border-top 5px solid buttons

.main-wrapper__title
    font-size 1.3em
    font-style normal
    font-variant normal
    font-weight 300
    font-stretch normal
    line-height normal
    font-family Roboto, arial, sans-serif
    width 100%
    height 30px
    margin 8px 0 6px 5px
    display block

.offers__down-text-mod
    width 60%

@media screen and (max-width: 850px)
    .main-wrapper__menu
        width 100%
        margin-left 0
    .main-wrapper__cart
        width 100%
        margin-left 0