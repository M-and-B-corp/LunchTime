@import '../../stylus/vars.styl'

.main-wrapper__company
    width 90%
    min-height 100%
    margin 0 auto
    padding 30px
    overflow hidden

.main-wrapper__menu
    width 90%
    background #fff
    float left
    margin-top 15px
    border-radius 2px
    overflow hidden
    box-shadow 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)
    border-top 5px solid buttons

.main-wrapper__cart
    //display none
    position fixed
    right 20px
    bottom 60px
    width 30%
    background #fff
    float left
    margin-top 15px
    margin-left 30px
    border-radius 2px
    overflow hidden
    box-shadow 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)
    border-top 5px solid buttons

.main-wrapper__title
    font-size 1.3em
    font-style normal
    font-variant normal
    font-weight 300
    font-stretch normal
    line-height normal
    font-family Roboto, arial, sans-serif
    width 100%
    height 30px
    margin 8px 0 6px 5px
    display block

.offers__down-text-mod
    width 60%

.cart_menu
    position fixed
    bottom 0
    right 20px

@media screen and (max-width: 950px)
    .main-wrapper__menu
        width 100%
        margin-left 0
    .main-wrapper__cart
        width 60%
        margin-left 0

@media screen and (max-width: 470px)
    .main-wrapper__cart
        width 90%
        margin-left 0