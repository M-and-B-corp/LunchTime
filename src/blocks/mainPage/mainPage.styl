@import '../../stylus/vars.styl'

.main-page
    width 90%
    display: flex
    margin 0 auto
    padding 30px
    overflow hidden
    min-height 100%
    flex-direction row
    justify-content center

.column
    width 47%
    display flex
    flex-direction: column

@media (max-width: 1024px)
    .main-page
        flex-direction column
        align-items center
    .column
        width 90%

.page_error
    height 25em
    line-height 25em
    text-align center

.error
    vertical-align middle

.page404
    height 100%
    line-height 100%
    text-align center
    background #fff

.image404
    vertical-align middle

.to_home
    position absolute
    top 30px
    left 200px


