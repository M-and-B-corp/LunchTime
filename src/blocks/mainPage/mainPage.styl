@import '../../stylus/vars.styl'

.main-page
    width 90%
    display: flex
    margin 0 auto
    padding 30px
    overflow hidden
    min-height 100%
    flex-direction row
    justify-content center

.column
    width 47%
    display flex
    flex-direction: column

@media (max-width: 1024px)
    .main-page
        flex-direction column
        align-items center
    .column
        width 90%