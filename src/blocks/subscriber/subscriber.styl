@import '../../stylus/vars.styl'

.subscriber
  width 680px
  background #f0f0f2
  margin 0 auto

.subscriber__name
  display table-cell
  width 100%
  vertical-align: middle
  padding-left 20px
  font-size 1.5em

.subscriber__dishes
  display table-cell
  vertical-align: middle
  white-space nowrap
  padding-right 100px
  padding-bottom 10px
  padding-top 10px

.dish__name
  display inline-block

.dish__hyphen
  display inline-block
  padding-left 10px
  padding-right 10px

.dish__price
  display inline-block

.subscriber__checkbox
  display table-cell
  vertical-align: middle
  padding-right 10px

