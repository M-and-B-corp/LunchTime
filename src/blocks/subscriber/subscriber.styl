.subscriber
  width 100%
  background #f0f0f2
  border-bottom 1px solid #e5e5e5
  border-radius 5px
  //vertical-align middle

.subscriber-self
  background #5fba17

.subscriber__avatar
  width 30px
  border-radius 50%
  display inline-block
  margin 10px
  margin-right 30px
  vertical-align middle

.subscriber__person
  display inline-block
  vertical-align middle
  font-size 0.9em

.subscriber__name
  display inline-block

.subscriber__paid
  display inline-block
  font-size 0.7em
  margin-left 5px

.subscriber__input
  float right
  margin-top 13px

.subscriber__input_paid
  margin-left 5px
  width 100%

.subscriber__input_paid:not(checked)
  position absolute
  opacity 0

.subscriber__input_paid:not(checked) + label
  position relative /* будем позиционировать псевдочекбокс относительно label */
  padding 0 0 0 60px /* оставляем слева от label место под псевдочекбокс */

.subscriber__input_paid:not(checked) + label:before
  content: ''
  position absolute
  top -4px
  left 0
  width 50px
  height 26px
  border-radius 13px
  background #CDD1DA
  box-shadow inset 0 2px 3px rgba(0,0,0,.2)

/* Оформление второй части чекбокса в выключенном состоянии (переключатель). */
.subscriber__input_paid:not(checked) + label:after
  content ''
  position absolute
  top -2px
  left 2px
  width 22px
  height 22px
  border-radius 10px
  background #FFF
  box-shadow 0 2px 5px rgba(0,0,0,.3)
  transition all .2s /* анимация, чтобы чекбокс переключался плавно */

/* Меняем фон чекбокса, когда он включен. */
.subscriber__input_paid:checked + label:before
  background #9FD468

/* Сдвигаем переключатель чекбокса, когда он включен. */
.subscriber__input_paid:checked + label:after
  left 26px

/* Показываем получение фокуса. */
.subscriber__input_paid:focus + label:before
  box-shadow 0 0 0 3px rgba(255,255,0,.5)




