@import '../../stylus/vars.styl'

.another-info
    width 100%

.another-info__cost
    width 26.6%
    display inline-block
    margin-top 10px

.another-info__text
    font-size 0.75em
    margin-top 10px
    color offers-grey
    height 28px

.another-info__dep
    width 26.6%
    display inline-block
    margin 10px 0 0 20px

.another-info__time
    width 26.6%
    display inline-block
    margin 10px 0 0 20px

.another-info__mod
    width 20%

@media screen and (max-width: 800px)
    .another-info
        margin 0

    .another-info__cost
        padding 10px 0 5px 5px

    .another-info__dep
        margin 0
        padding 10px 0 5px 5px

    .another-info__time
        margin 0
        padding 0 0 5px 5px
        margin-bottom 10px

    .another-info__mod
        width 30%

@media screen and (min-width: 800px) and (max-width: 1000px)
    .another-info
        height 100px
        padding-top 30px
        margin 0 auto

    .another-info__time
        padding 1px 0 0 0
        margin 10px

    .another-info__mod
        width 30%


