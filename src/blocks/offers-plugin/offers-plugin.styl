@import '../../stylus/vars.styl'

.offers-plugin
    margin-top 10px

.offers-pluign__hide, .offers-pluign__hide + label ~ div
    display none

.offers-pluign__hide
    position relative

.offers-pluign__hide + label,
.offers-pluign__hide:checked + label
    padding 0
    color buttons
    cursor pointer
    border-bottom 1px solid #ccc

.offers-pluign__hide:checked + label
    color offers-grey
    border-bottom 0

.offers-pluign__hide:checked + label + div
    display block
    height 50px
    background #f8f9fb
    box-shadow inset (0 0 3px 0 rgba(229,229,229,1))
    padding 10px

.offers-hide__timepicker
    margin-top 10px
    width 450px

.offer-hide__title
    margin 10px 10px 0 0
    float left
    

.offers-hide__time-hrs
    width 50px
    height 35px
    float left

.offers-hide__dtt
    float left
    margin 5px 4px 0 4px
.offers-hide__time-mnts
    width 50px
    height 35px
    float left

.offers-hide__more
    display block
    float left
    background url(../images/offers-update/icons.png) no-repeat -12px
    width 20px
    height 20px
    padding-top 10px
    margin 0 5px 0 5px
    cursor pointer

.offers-hide__less
    display block
    background url(../images/offers-update/icons.png) no-repeat -72px
    width 20px
    height 20px
    float left
    padding-top 10px
    margin-left 5px
    cursor pointer
