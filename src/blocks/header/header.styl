@import '../../stylus/vars.styl'
@font-face
  font-family Curvic
  src url(../fonts/Curvic.ttf)

.header__title
  font-family Curvic
  color #5fba17
  position absolute
  left 100px
  top 25px
  font-size 1.2em
  text-decoration none

.header
  width 100%
  height 60px
  font-family main-font
  background-color #434343
  box-shadow 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)

.header__logo
  width 60px
  height 60px
  background url(../images/head/our_logo.png) no-repeat
  background-size contain
  position absolute
  left 30px
  top 0

@media (max-width: 500px)
  .header__title
    left 10px


