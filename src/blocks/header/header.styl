@import '../../stylus/vars.styl'

.header
  height 90px
  font-family main-font
  background-color #FFFFFF  
  position relative

.header__title
  margin 0 0 0 120px
  font-size 2em
  padding-top 10px

.header__logo
  width 90px
  height 90px
  background url(../images/food.svg) no-repeat
  background-size contain
  position: absolute
  left 30px
  top: 0

.header__slogan
  margin 0 0 0 120px
  font-size 1.2em
  position relative

.header__bell
  position: absolute
  width: 50px
  right:0
  top:0

