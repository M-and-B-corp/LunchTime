@import '../../stylus/vars.styl'

.session
    z-index 1
    float left
    position relative
    margin 10px
    background #f5f5f5
    border-radius 5px
    margin-bottom 30px
    box-shadow 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23)

.session__header
    background-color #eaeaea
    border-bottom 2px solid buttons
    border-top-left-radius 5px
    border-top-right-radius 5px

.session_header-self
    background-color #5fba17

img.header_content__avatar
    border-radius 50%
    margin 5px
    display inline-block
    vertical-align middle
    margin-right 15px
    z-index -1
    width 50px

.info_owner
    display inline-block
    vertical-align middle

.info_owner__time
    width 67%
    font-size 0.8em
    display inline-block

.info_owner__session_time
    display inline-block
    margin-left 3px

.control__chat
    width 50px
    display inline-block
    vertical-align middle
    position absolute
    right 60px
    top 10px
    margin-right 20px
    margin-top 5px
    font-size 2em

.control__chat img
    width 30px

.header_content__order
    width 50px
    display inline-block
    vertical-align middle
    position absolute
    right 110px
    top 10px
    margin-right 20px
    margin-top 5px
    font-size 2em

.header_content__order img
    width 30px

.header_content__add
    width 50px
    display inline-block
    vertical-align middle
    position absolute
    right 10px
    top 10px
    margin-right 10px
    margin-top 5px
    font-size 2em

.header_content__add img
    width 30px

.header_content__button
    display inline-block
    vertical-align middle
    position absolute
    right 0
    top 0
    margin-right 20px
    margin-top 5px
    font-size 2em
    width 50px

.main_content
    height 205px
    overflow-y auto

.main_content__dishes
    margin 10px

.session__controls
    text-align center

.session__subscriber
    //background-color #c9c9c9
    border-top 2px solid buttons

.subscriber__title img
    margin-top 5px

.title__title
    margin-bottom 25px
    margin-left 10px
    display inline-block
    vertical-align middle
    width 70%
    font-size 1.2em

.title__menu
    width 50px

.title__close
    margin-left 10px
    width 40px

.title__down
    width 30px
    margin-top 10px

.main_content__image
    width 100px

.subscriber__title hr
    width 90%
    margin 0 auto

.subscriber__allcost
    //display inline-block
    text-align center
    margin 10px
    margin-left 0

.allcost__sum
    margin-left 5px
    //display inline-block
    text-align center

.full_sum
    display inline-block
    width 100%

@media (max-width: 630px)
    .menu-item
        width 49%

@media (max-width: 490px)
    .info_owner
        display none

@media (max-width: 480px)
    .title__title
        width 50%
