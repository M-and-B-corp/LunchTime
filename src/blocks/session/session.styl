@import '../../stylus/vars.styl'

.session
    width 47%
    z-index 1
    float left
    position relative
    margin 10px
    background #fff
    border-radius 2px
    margin-bottom 30px
    box-shadow 0 2px 5px 0 rgba(0,0,0,.16),0 2px 10px 0 rgba(0,0,0,.12)

.session__header
    background-color #f5f5f5

img.header_content__avatar
    border-radius 50%
    margin 5px
    //float left
    display inline-block
    vertical-align middle
    margin-right 15px
    z-index -1

.info_owner
    display inline-block
    vertical-align middle

.info_owner__time
    font-size 0.8em

.header_content__button
    display inline-block
    vertical-align middle
    position absolute
    right 0
    top 0
    margin-right 20px
    margin-top 5px
    font-size 2em

.session__main
    background-color #fff

.main_content__dishes
    margin-left 10px

.session__controls
    background-color #fff
    text-align center

.control__chat
    display inline-block

.control__order
    display inline-block

.session__subscriber
    background-color red

