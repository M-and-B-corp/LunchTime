@import '../../stylus/vars.styl'

.session
    width 47%
    z-index 1
    float left
    position relative
    margin 10px
    background #fff
    border-radius 2px
    margin-bottom 30px
    box-shadow 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)

.session__header
    background-color #f5f5f5

img.header_content__avatar
    border-radius 50%
    margin 5px
    //float left
    display inline-block
    vertical-align middle
    margin-right 15px
    z-index -1
    width 50px

.info_owner
    display inline-block
    vertical-align middle

.info_owner__time
    font-size 0.8em

.control__chat
    float left
    //display inline-block
    //width 100%

.header_content__button
    display inline-block
    vertical-align middle
    position absolute
    right 0
    top 0
    margin-right 20px
    margin-top 5px
    font-size 2em

.session__main
    height 215px

.main_content__dishes
    margin-left 30px

.session__controls
   display inline-block
    // text-align center

.control
    display inline-block

.session__subscriber
    //background-color red
    border-top 1px solid #e5e5e5

.subscriber__title
    background-color #efefef

.title__title
    margin-bottom 15px
    margin-left 10px
    display inline-block
    vertical-align middle
    width 80%

.title__down
    width 30px
    margin-top 10px

.subscriber__list
    display none

.main_content__image
    width 100px

@media (max-width: 630px)
    .menu-item
        width 49%

@media (max-width: 770px)
    .session
        width 90%
