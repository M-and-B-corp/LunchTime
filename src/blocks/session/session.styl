@import '../../stylus/vars.styl'

.session
    width 47%
    z-index 1
    float left
    position relative
    margin 10px
    background #fff
    border-radius 2px
    margin-bottom 30px
    box-shadow 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)

.session__header
    background-color #f5f5f5

img.header_content__avatar
    border-radius 50%
    margin 5px
    //float left
    display inline-block
    vertical-align middle
    margin-right 15px
    z-index -1

.info_owner
    display inline-block
    vertical-align middle

.info_owner__time
    font-size 0.8em

.header_content__button
    display inline-block
    vertical-align middle
    position absolute
    right 0
    top 0
    margin-right 20px
    margin-top 5px
    font-size 2em

.session__main
    background url(../images/SouthWest_Burger.jpg) no-repeat
    background-size 100%
    height 215px
    color #fff

.main_content__dishes
    margin-left 10px

.session__controls
    //background-color #fff
    text-align center
    margin-top 115px

.control__chat
    display inline-block

.control__order
    display inline-block

.session__subscriber
    background-color red
    border-top 1px solid #e5e5e5

.subscriber__title
    background-color #efefef

.title__title
    margin-bottom 15px
    margin-left 10px
    display inline-block
    vertical-align middle
    width 80%

.title__down
    width 30px
    margin-top 10px

.subscriber__list
    display none

@media (max-width: 630px)
    .session
        width 70%
