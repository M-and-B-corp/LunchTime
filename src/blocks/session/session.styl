@import '../../stylus/vars.styl'

.session
    width 680px
    height 200px
    // border 3px solid #ccc
    position relative
    margin 0 auto
    background #fff
    border 2px dashed border-offers
    border-radius 10px
    
    
.session + .session 
    margin-top 30px

.session
    &:first-child
        margin-top 10px
    &:last-child
        margin-bottom 10px


.session__name
    width 345px
    font-size 1.2em
    margin-left 250px
    padding-top 20px
    border-bottom 1px solid border-offers

.session__time
    width 50px
    font-size 1.6em
    margin-left 250px
    margin-bottom 10px

.session__controls
    margin-left 245px
    padding-bottom 10px
