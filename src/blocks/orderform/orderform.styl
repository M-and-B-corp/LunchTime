.orderform
  width 100%
  min-height 100%
  background-color rgba(255,255,255,0.75)
  overflow hidden
  position fixed
  top 0
  left 0
  display none
  z-index 10
  margin 0
  padding 0

.orderform__close
  width 50px
  height 50px
  background url(../../images/total/close.png) no-repeat
  background-size cover
  position absolute
  right 0
  &:active .chat__title
    display none

.orderform__title
  background-color #e5e5e5
  width 100%
  //padding-left 52px
  padding-top 1px
  padding-bottom 1px

.order_title
  margin 20px

.orderform__content
  margin 40px auto 0 auto
  background-color #fff
  border-radius 2px
  box-shadow 0 2px 5px 0 rgba(0,0,0,0.16), 0 2px 10px 0 rgba(0,0,0,0.12)
  width 70%
  overflow-y auto

.orderform__contact
  //height 80%
  padding-top 20px
  padding-left 10px

.orderform_input
  background-color #efefef
  margin 0 auto
  text-align center

.chat__hr
  width 75%
  margin 0 auto

.orderform__dishes
  overflow-y auto
  white-space nowrap
  padding 20px

.orderform__dishes img
  width 100px
  margin 10px

.input__button
  width 121px
  margin 0 auto

.photo
  display inline-block
  position relative

.photo:hover::after
  content attr(data-title)
  position absolute
  left 20%
  top 30%
  z-index 1
  background rgba(255,255,230,0.9)
  font-family Arial, sans-serif
  font-size 11px
  padding 5px 10px
  border 1px solid #333
