include ../button/button

mixin menuitem(dish)
    .menu-item
        img.menu-item__image(src= dish.image)
        .menu-item__info
            .menu-item__title= dish.title
            .menu-item__other-info
                .menu_item__price= dish.price
                    span руб.
                +button("В заказ!", ["button_size-m"], {"type": "submit"})
