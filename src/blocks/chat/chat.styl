.chat
  width 100%
  min-height 100%
  background-color rgba(0, 0, 0, 0.6)
  overflow hidden
  position fixed
  top 0
  left 0
  display none
  z-index 10
  margin 0
  padding 0

.chat__close img
  width 40px
  height 40px
  display inline-block
  vertical-align middle
  cursor pointer

.chat__close
  float right
  display inline-block
  &:active .chat__title
    display none

.chat__title
  background-color #e5e5e5
  width 100%
  height 35px
  padding-bottom 10px
  vertical-align middle

.title__user_name
  margin-left 20px
  margin-top 10px
  margin-bottom 10px
  color #151515
  display inline-block

.chat__content
  margin 40px auto 0 auto
  background-color #fff
  border-radius 2px
  box-shadow 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22)
  height 500px
  width 70%

.chat__history
  width 100%
  height 70%
  margin 0 auto
  padding-top 20px
  overflow-y auto

.chat__input
  background-color #efefef

.input_message
  width 90%
  display inline-block
  vertical-align middle
  margin-bottom 40px

.chat__hr
  width 75%
  margin 0 auto

.chat__input input
  margin-left 10px
  margin-right 10px
  width 60%
  display inline-block
  vertical-align middle

.chat__input img
  border-radius 50%
  margin 5px
  display inline-block
  width 50px

input.form-control
  border 0 solid #fff
  outline none
  background #efefef

@media (max-width: 875px)
  .chat__input input
    width 35%
